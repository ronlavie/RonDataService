<Window x:Class="WPF_RON.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_RON"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="User Profile"
        Height="1000"
        Width="800">
    
    <StackPanel Background="BlanchedAlmond">
        <TextBlock FontSize="50">
            <Run Text="{Binding Path=Firstname}" />
            <Run Text=" " />
            <Run Text="{Binding Path=Lastname}" />
        </TextBlock>
        <StackPanel>
            <TextBlock Text="Shows"
                       FontSize="50" />
        </StackPanel>
        <ScrollViewer Height="350"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Hidden"
                      CanContentScroll="True"
                      Margin="20">
            <StackPanel>
                <StackPanel x:Name="pnlViewShows"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"></StackPanel>
            </StackPanel>
        </ScrollViewer>
        <StackPanel>
            <TextBlock Text="Movies"
                       FontSize="50" />
        </StackPanel>
        <ScrollViewer Height="350"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Hidden"
                      CanContentScroll="True"
                      Margin="20"> 
            <StackPanel>
                <StackPanel x:Name="pnlViewMovies"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"></StackPanel>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>

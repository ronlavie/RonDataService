<UserControl x:Class="WPF_RON.UserControlMovie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_RON"
             mc:Ignorable="d"
             Height="500"
             Width="400">
    <Border BorderBrush="Red"
            BorderThickness="5"
            CornerRadius="5"
            Margin="15">
        <Grid Margin="5"
              Background="AntiqueWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition  Height="1.2*" />
            </Grid.RowDefinitions>
            <Image x:Name="img"
                   Source="Images/Se7en.png"
                   Width="250" />
            <TextBlock Grid.Row="1"
                       FontSize="10"
                       Text="{Binding Path=MovieName}"
                       TextAlignment="Center"
                       TextWrapping="WrapWithOverflow" />
            <TextBlock Grid.Row="2"
                       FontSize="10"
                       Text="{Binding Path=MovieCategory.CategoryName}"
                       TextAlignment="Center" />
            <TextBlock Grid.Row="3"
                       TextWrapping="WrapWithOverflow"
                       Text="{Binding Path=About}"></TextBlock>
        </Grid>
    </Border>
</UserControl>

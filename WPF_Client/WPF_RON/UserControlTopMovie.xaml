<UserControl x:Class="WPF_RON.UserControlTopMovie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_RON"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Height="300"
             Width="200">
    <Grid Margin="5"
          Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Image on top -->
        <Border BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="2"
                Grid.Row="0"
                Margin="0 2 10 0">
            <Image x:Name="img"
                   Source="Images/Se7en.png"
                   Stretch="Fill"
                   Width="200"
                   Height="150" />
        </Border>
        <!-- Movie Name -->
        <TextBlock Grid.Row="1"
                   FontSize="20"
                   VerticalAlignment="Center"
                   Text="{Binding Path=MovieName}"
                   TextAlignment="Center"
                   TextWrapping="WrapWithOverflow"
                   Foreground="DarkBlue" />
        <!-- Movie Category -->
        <TextBlock Grid.Row="2"
                   FontSize="15"
                   Text="{Binding Path=MovieCategory.CategoryName}"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="DarkGreen" />
        <!-- Rating and Reviews -->
        <StackPanel Grid.Row="3"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <materialDesign:RatingBar Value="4"
                                          IsReadOnly="True"
                                          x:Name="RatingBar" />
            </StackPanel>
            <TextBlock FontSize="10"
                       ToolTip="Avg.... from IMDB"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="DarkRed">
                <Run Text="{Binding Path=ImdbRating}" />
                <Run Text="(Imdb)" />
                <Run Text="{Binding Path=Metascore}" />
                <Run Text="(Meta)" /></TextBlock>
        </StackPanel>
        <!-- Rank -->
        <TextBlock Grid.Row="4"
                   x:Name="tbRank"
                   TextWrapping="WrapWithOverflow"
                   Text="RANK :"
                   Foreground="DarkOrange" />
    </Grid>
</UserControl>

<UserControl
    x:Class="WPF_RON.UserControlShow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_RON"
    mc:Ignorable="d"
    Height="300"
    Width="200">
    <Grid Margin="5"
        Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition  Height="1.5*"/>
        </Grid.RowDefinitions>
        <Image x:Name="img" Source="/Images/Breaking-Bad-Logo-PNG-Image.png"/>

        <TextBlock
            Grid.Row="1"
            FontSize="15"
            Text="{Binding Path=ShowName}" 
            TextAlignment="Center"/>            
        <TextBlock
            Grid.Row="2"
            FontSize="15"
                   Text="{Binding Path=ShowCategory.CategoryName}"
            TextAlignment ="Center"/>
            
        <TextBlock
            Grid.Row="3" TextWrapping="WrapWithOverflow"
                   Text="{Binding Path=ShowDescription}"
            FontSize="11" />
    </Grid>
</UserControl>

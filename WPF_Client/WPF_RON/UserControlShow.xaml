<UserControl
    x:Class="WPF_RON.UserControlShow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_RON"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="280">
    <Grid
        Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition  Height="100"/>
        </Grid.RowDefinitions>
        <Image Source="/Images/Breaking-Bad-Logo-PNG-Image.png" Margin="15"/>

        <TextBlock
            Grid.Row="1"
            FontSize="20"
            Text="Breaking Bad" 
            TextAlignment="Center"/>
            
        <TextBlock
            Grid.Row="2"
            FontSize="20"
            Text="Drama"
            TextAlignment ="Center"/>
            
        <TextBlock
            Grid.Row="3"
            Text="the series follows the exploits of Walter White,&#10; a modest high school chemistry teacher,&#10; who discovers a new purpose in life when he&#10; learns he has terminal cancer and turns to a &#10;life of crime to provide for his family"
            FontSize="14" />
    </Grid>
</UserControl>

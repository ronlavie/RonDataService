<Window x:Class="WPF_RON.WindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WPF_RON"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Admin Window"
        Height="800"
        Width="1000">
    <Window.Resources>
        <Style TargetType="Button"
               BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="Height"
                    Value="50" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/back.png" />
        </Grid.Background>
        <Grid Margin="15 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*" />
                <RowDefinition Height="0.15*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.15*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Admin Section"
                       Foreground="Snow"
                       Grid.Row="0"
                       TextAlignment="Center"
                       FontSize="48"
                       FontFamily="Copperplate Gothic Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            <UniformGrid Rows="1"
                         Grid.Row="1">
                <Button  Width="200"
                         Click="GoTo_Users">USERS</Button>
                <Button  Width="200"
                         Grid.Row="1"
                         HorizontalAlignment="Left"
                         Click="GoTo_Category">CATEGORY</Button>
                <Button  Width="200"
                         Grid.Row="1"
                         HorizontalAlignment="Center"
                         Click="GoTo_Show">SHOW</Button>
                <Button  Width="200"
                         Grid.Row="1"
                         HorizontalAlignment="Right"
                         Click="GoTo_Movie">MOVIE</Button>
                <Button  Width="200"
                         HorizontalAlignment="right"
                         Click="GoTo_Home">
                    <materialDesign:PackIcon Kind="ExitToApp"
                                             Height="50"
                                             Width="50"
                                             Margin="-30" />
                </Button>
            </UniformGrid>
            <Border Grid.Row="2"
                    Padding="2">
                <Grid x:Name="grMain" />
            </Border>
            <Image Source="/Images/smallLogoNoBack.png"
                   Width="250"
                   Grid.Row="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom" />
        </Grid>
    </Grid>
</Window>
